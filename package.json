{
  "name": "idb-repo",
  "version": "2.0.0-rc",
  "description": "A high-performance IndexedDB-based key-value storage implementation with caching, TTL support, and full TypeScript support",
  "type": "module",
  "main": "./dist/index-node.js",
  "module": "./dist/index-node.js",
  "browser": "./dist/index-browser.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/index-browser.js",
      "node": "./dist/index-node.js",
      "import": "./dist/index-node.js",
      "default": "./dist/index-node.js"
    },
    "./repo": {
      "types": "./dist/index-repo.d.ts",
      "import": "./dist/index-repo.js",
      "default": "./dist/index-repo.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:node": "bun build ./index-node.ts --target node --outdir ./dist --minify",
    "build:browser": "bun build ./index-browser.ts --target browser --outdir ./dist --minify",
    "build:repo": "bun build ./index-repo.ts --target node --outdir ./dist --minify",
    "build": "rm -rf dist/ && npm run build:node && npm run build:browser && npm run build:repo && tsc --emitDeclarationOnly -p tsconfig.build.json && rm -rf dist/src",
    "test:encryption-provider:node": "cd src/encryption/node && node --import=tsx --test node-provider-integration.test.node.ts"
  },
  "keywords": [
    "indexeddb",
    "kv-storage",
    "storage",
    "cache",
    "typescript",
    "browser",
    "performance"
  ],
  "author": "github.com/geoffsee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/geoffsee/idb-repo.git"
  },
  "bugs": {
    "url": "https://github.com/geoffsee/idb-repo/issues"
  },
  "homepage": "https://github.com/geoffsee/idb-repo#readme",
  "dependencies": {
    "wasm-pqc-subtle": "0.2.4"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "@types/node": "latest",
    "playwright": "^1.58.2",
    "tsx": "latest",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
