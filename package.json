{
  "name": "idb-repo",
  "version": "1.1.1",
  "description": "A high-performance IndexedDB-based key-value storage implementation with caching, TTL support, and full TypeScript support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "browser": "./dist/browser.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser.js",
      "node": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:node": "bun build ./index-node.ts --target node --outdir ./dist --minify --outfile index.js",
    "build:browser": "bun build ./index-browser.ts --target browser --outdir ./dist --minify --outfile browser.js",
    "build": "rm -rf dist/ && npm run build:node && npm run build:browser && tsc --emitDeclarationOnly -p tsconfig.build.json && rm -rf dist/src"
  },
  "keywords": [
    "indexeddb",
    "kv-storage",
    "storage",
    "cache",
    "typescript",
    "browser",
    "performance"
  ],
  "author": "github.com/geoffsee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/geoffsee/idb-repo.git"
  },
  "bugs": {
    "url": "https://github.com/geoffsee/idb-repo/issues"
  },
  "homepage": "https://github.com/geoffsee/idb-repo#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "idb-keyval": "^6.2.2",
    "playwright": "^1.58.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
